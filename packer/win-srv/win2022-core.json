{
  "variables": {
    "boot_wait": "5s",
    "disk_size": "40960",
    "iso_checksum": "4f1457c4fe14ce48c9b2324924f33ca4f0470475e6da851b39ccbf98f44e7852",
    "iso_url": "https://software-download.microsoft.com/download/sg/20348.169.210806-2348.fe_release_svc_refresh_SERVER_EVAL_x64FRE_en-us.iso",
    "memsize": "6000",
    "numvcpus": "4",
    "vm_name": "WIN-SRV2022",
    "proxmox_disk_size": "40G",
    "vm_id": 48453,
    "winrm_password": "packer",
    "winrm_username": "Administrator",
    "virtio_iso_path": "../virtio-win-0.1.229.iso"
  },
  "builders": [
    {
      "type": "qemu",
      "machine_type": "q35",
      "memory": "{{user `memsize`}}",
      "cpus": "{{user `numvcpus`}}",
      "vm_name": "{{user `vm_name`}}.qcow2",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": true,
      "boot_wait": "{{user `boot_wait`}}",
      "disk_size": "{{user `disk_size`}}",
      "disk_interface": "virtio-scsi",
      "disk_discard": "unmap",
      "disk_detect_zeroes": "unmap",
      "format": "qcow2",
      "communicator": "winrm",
      "winrm_username": "{{user `winrm_username`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "winrm_use_ssl": true,
      "winrm_insecure": true,
      "winrm_timeout": "4h",
      "qemuargs": [
        [
          "-cdrom",
          "{{user `virtio_iso_path`}}"
        ]
      ],
      "floppy_files": [
        "scripts/bios/core/autounattend.xml"
      ],
      "shutdown_command": "shutdown /s /t 5 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "30m",
      "output_directory": "./output-qemu-2022"
    },
    {
      "type": "proxmox-iso",
      "proxmox_url": "{{user `proxmox_url`}}",
      "username": "{{user `proxmox_token_id`}}",
      "token": "{{user `proxmox_token_secret`}}",
      "node": "{{user `proxmox_node`}}",
      "vm_name": "{{user `vm_name`}}",
      "memory": "{{user `memsize`}}",
      "tags": "advenv",
      "cores": "{{user `numvcpus`}}",
      "os": "win10",
      "insecure_skip_tls_verify": "{{user `insecure_skip_tls_verify`}}",
      "machine": "q35",
      "scsi_controller": "virtio-scsi-single",
      "network_adapters": [
        {
          "model": "e1000",
          "bridge": "vmbr0"
        }
      ],
      "disks": [
        {
          "type": "scsi",
          "disk_size": "{{user `proxmox_disk_size`}}",
          "storage_pool": "{{user `proxmox_storage`}}"
        }
      ],
      "boot_iso": {
        "type": "scsi",
        "iso_file": "{{user `proxmox_iso_storage`}}:iso/20348.169.210806-2348.fe_release_svc_refresh_SERVER_EVAL_x64FRE_en-us.iso",
        "unmount": true,
        "iso_checksum": "{{user `iso_checksum`}}"
      },
      "additional_iso_files": [
        {
          "type": "sata",
          "iso_file": "{{user `proxmox_iso_storage`}}:iso/win-srv-unattend.iso",
          "unmount": true
        },
        {
          "type": "sata",
          "iso_file": "{{user `proxmox_iso_storage`}}:iso/virtio-win-0.1.229.iso",
          "unmount": true
        }
      ],
      "boot_wait": "{{user `boot_wait`}}",
      "http_directory": "scripts/bios/core",
      "boot_command": [
        "<esc><wait><f12><wait><enter>"
      ],
      "communicator": "winrm",
      "winrm_username": "{{user `winrm_username`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "winrm_use_ssl": true,
      "winrm_insecure": true,
      "winrm_timeout": "4h",
      "qemu_agent": true,
      "template_name": "{{user `vm_name`}}",
      "template_description": "Windows Server 2022 Core template built on {{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "scripts": [
        "scripts/setup.ps1",
        "scripts/choco.ps1"
      ]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "30m"
    },
    {
      "type": "powershell",
      "scripts": [
        "scripts/cleanup.ps1"
      ],
      "pause_before": "1m"
    }
  ]
}
